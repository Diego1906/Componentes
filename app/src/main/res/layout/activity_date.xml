<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DateActivity">

    <Button
        android:id="@+id/buttonDatePicker"
        android:layout_width="@dimen/dip_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_16"
        android:text="Date Picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDataPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Atual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonDatePicker" />


</android.support.constraint.ConstraintLayout>